{
  "name": "nest-onion-boilerplate",
  "version": "0.0.1",
  "description": "a boilerplate for my projects",
  "author": "Nicolas Beaussart <nic.beaussart@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*{.ts,.scss,.html}\"",
    "format:check": "prettier --list-different \"src/**/*{.ts,.scss,.html}\"",
    "lint": "yarn server:lint && yarn client:lint",
    "server:start": "ts-node --project ./src/server/tsconfig.server.json -r tsconfig-paths/register src/server/main.ts",
    "server:watch": "nodemon",
    "preserver:start:prod": "rimraf dist && yarn server:build",
    "server:build": "tsc -p ./src/server/tsconfig.server.json",
    "server:start:prod": "node server-dist/main.js",
    "server:lint": "tslint -p src/server/tsconfig.server.json -c src/server/tslint.json",
    "server:test": "jest -c jest.server.config.js --watch",
    "server:test:watch": "jest -c jest.server.config.js",
    "server:test:ci": "jest -c jest.server.config.js --runInBand --coverage",
    "server:test:cov": "jest -c jest.server.config.js --coverage",
    "server:e2e": "jest -c jest.server.e2e.config.js --coverage",
    "server:doc:build": "./node_modules/.bin/compodoc -c compodoc.server.json",
    "server:doc": "./node_modules/.bin/compodoc -c compodoc.server.json -s -o -w",
    "client:start": "ng serve --open",
    "client:start:hmr": "ng serve --configuration hmr --source-map=false --hmr-warning=false",
    "client:start:hmr:sourcemaps": "ng serve --configuration hmr --source-map=true --hmr-warning=false",
    "client:build:": "node --max_old_space_size=6144 ./node_modules/@angular/cli/bin/ng build --dev",
    "client:build:stats": "node --max_old_space_size=6144 ./node_modules/@angular/cli/bin/ng build --dev --stats-json",
    "client:build:prod": "node --max_old_space_size=6144 ./node_modules/@angular/cli/bin/ng build --prod",
    "client:build:docker": "node --max_old_space_size=6144 ./node_modules/@angular/cli/bin/ng build --configuration=docker",
    "client:build:prod:stats": "node --max_old_space_size=6144 ./node_modules/@angular/cli/bin/ng build --prod --stats-json",
    "client:test": "jest -c jest.client.config.js",
    "client:test:watch": "jest -c jest.client.config.js --watch",
    "client:test:ci": "jest -c jest.client.config.js --runInBand",
    "client:lint": "ng lint",
    "client:e2e": "ng e2e",
    "client:doc:build": "./node_modules/.bin/compodoc -c compodoc.client.json",
    "client:doc": "./node_modules/.bin/compodoc -c compodoc.client.json -s -o -w",
    "client:bundle:report": "webpack-bundle-analyzer dist/stats.json"
  },
