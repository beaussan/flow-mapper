  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*!(.spec).ts": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,html,scss,yml,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
